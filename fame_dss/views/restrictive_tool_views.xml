<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- record create: form -->
        <record id="restrictive_tool_form" model="ir.ui.view">
            <field name="name">restrictive_tool_form</field>
            <field name="model">restrictive.tool</field>
            <field name="arch" type="xml">

                <form>
                    <sheet>
                        <group>
                            <field name="area"/>
                            <field name="ceid"/>
                            <field name="note"/>

                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- schema: tree  -->
        <record id="restrictive_tool_tree" model="ir.ui.view">
            <field name="name">restrictive_tool.tree</field>
            <field name="model">restrictive.tool</field>
            <field name="arch" type="xml">

                <tree>
                    <field name="area"/>
                    <field name="ceid"/>
                    <field name="note"/>

                </tree>
            </field>
        </record>

        <!-- ???: action (form & tree) -->
        <record id="restrictive_tool_action" model="ir.actions.act_window">
            <field name="name">restrictive tools</field>

            <field name="res_model">restrictive.tool</field>

            <field name="view_mode">tree,form</field>

            <field name="context" eval="{'search_default_my_certificates': 1}"/>
            <field name="help" type="html">

                <p class="oe_view_nocontent_create">Create the first record</p>

            </field>
        </record>
    </data>

        <!-- menu item app: name and action -->
        <menuitem id="menu_restrictive_tool"
            name="restrictive tool"
            action="restrictive_tool_action"
            sequence="100"
        />
</odoo>
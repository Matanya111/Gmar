<?xml version="1.0" encoding="UTF-8"?>

<odoo>

    <data>

        <!-- record create: form -->
        <record id="execl_1_form" model="ir.ui.view">

            <field name="name">execl_1_form</field>
            <field name="model">execl.1</field>
            <field name="arch" type="xml">

                <form>
                    <sheet>
                        <group>

                            <field name="AREA"/>
                            <field name="ceid_list"/>
                            <field name="MOM"/>
                            <field name="CHAMBER"/>
                            <field name="WW"/>
                            <field name="AVAILABILITY"/>
                            <field name="GOAL"/>

                        </group>
                    </sheet>
                </form>

            </field>

        </record>

        <!-- schema: tree  -->
        <record id="execl_1_tree" model="ir.ui.view">

            <field name="name">execl_1.tree</field>
            <field name="model">execl.1</field>
            <field name="arch" type="xml">

                <tree>

                    <field name="AREA"/>
                    <field name="ceid_list"/>
                    <field name="MOM"/>
                    <field name="CHAMBER"/>
                    <field name="WW"/>
                    <field name="AVAILABILITY"/>
                    <field name="GOAL"/>

                </tree>

            </field>

        </record>

        <!-- action (form & tree) -->
        <record id="execl_1_action" model="ir.actions.act_window">

            <field name="name">execl 1</field>
            <field name="res_model">execl.1</field>
            <field name="view_mode">tree,form,pivot,graph</field>
            <field name="context" eval="{'search_default_my_certificates': 1}"/>
            <field name="help" type="html">
               <p class="oe_view_nocontent_create">Create the first record</p>
            </field>

        </record>

    </data>

        <!-- menu item app: name and action -->
        <menuitem id="menu_execl_1"
            name="execl 1"
            action="execl_1_action"
            sequence="100"
        />

</odoo>
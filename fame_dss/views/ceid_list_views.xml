<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- record create: form -->
        <record id="ceid_list_form" model="ir.ui.view">
            <field name="name">ceid_list_form</field>
            <field name="model">ceid.list</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="area"/>
                            <field name="name"/>
                        </group>
                        <notebook>
                            <page string="Ceid Avialabilty" name="ceid_avialabilty">
                                <field
                                    name="ceid_availablity"
                                    widget="section_and_note_one2many"
                                    mode="tree,kanban"
                                >
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- schema: tree  -->
        <record id="ceid_list_tree" model="ir.ui.view">
            <field name="name">ceid_list.tree</field>
            <field name="model">ceid.list</field>
            <field name="arch" type="xml">

                <tree>
                    <field name="area"/>
                    <field name="name"/>

                </tree>
            </field>
        </record>

        <!-- ???: action (form & tree) -->
        <record id="ceid_list_action" model="ir.actions.act_window">
            <field name="name">ceid list</field>

            <field name="res_model">ceid.list</field>

            <field name="view_mode">tree,form</field>

            <field name="context" eval="{'search_default_my_certificates': 1}"/>
            <field name="help" type="html">

                <p class="oe_view_nocontent_create">Create the first record</p>

            </field>
        </record>
    </data>

        <!-- menu item app: name and action -->
        <menuitem id="menu_ceid_reports"
            name="ceid reports"
            action="ceid_list_action"
            sequence="100"
        />
</odoo>
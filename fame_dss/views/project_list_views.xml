<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <!-- record create: form -->
        <record id="project_list_form" model="ir.ui.view">
            <field name="name">project_list_form</field>
            <field name="model">project.list</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="area"/>
                            <field name="ceid"/>
                            <field name="project_name"/>
                            <field name="project_start_date"/>
                            <field name="project_end_date"/>
                            <field name="summary_and_decisions"/>
                            <field name="eng"/>
                            <field name="last_update"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- schema: tree  -->
        <record id="project_list_tree" model="ir.ui.view">
            <field name="name">project_list.tree</field>
            <field name="model">project.list</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="area"/>
                    <field name="ceid"/>
                    <field name="project_name"/>
                    <field name="project_start_date"/>
                    <field name="project_end_date"/>
                    <field name="summary_and_decisions"/>
                    <field name="eng"/>
                    <field name="last_update"/>
                </tree>
            </field>
        </record>

        <!-- ???: action (form & tree) -->
        <record id="project_list_action" model="ir.actions.act_window">
            <field name="name">project list</field>
            <field name="res_model">project.list</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{'search_default_my_certificates': 1}"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first record</p>
            </field>
        </record>

    </data>

        <!-- menu item app: name and action -->
        <menuitem id="menu_projects_monitoring"
            name="2 project monitoring"
            action="project_list_action"
            sequence="100"
        />

</odoo>
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="l10n_il_edi_certificate_form" model="ir.ui.view">
            <field name="name">l10n_il_edi.certificate.form</field>
            <field name="model">l10n_il_edi.certificate</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="state"/>
                            <field name="country"/>
                            <field name="organization"/>
                            <field name="domain"/>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="password" password="True"/>
                            <label for="date_start" string="Validity"/>
                            <button name="generate_signature" type="object" string="Generate Signature"/>
                            <div>
                                <field name="date_start"/> -
                                <field name="date_end"/>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="l10n_il_edi_certificate_tree" model="ir.ui.view">
            <field name="name">l10n_il_edi.certificate.tree</field>
            <field name="model">l10n_il_edi.certificate</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </tree>
            </field>
        </record>

        <record id="l10n_il_edi_certificate_action" model="ir.actions.act_window">
            <field name="name">Certificates for EDI invoices on Israel</field>
            <field name="res_model">l10n_il_edi.certificate</field>
            <field name="view_mode">tree,form</field>
            <field name="context" eval="{'search_default_my_certificates': 1}"/>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Create the first certificate</p>
            </field>
        </record>
    </data>

        <menuitem id="menu_l10n_il_edi_certificates"
                      name="Certificates"
                      action="l10n_il_edi_certificate_action"
                      sequence="100"
                      />
</odoo>
